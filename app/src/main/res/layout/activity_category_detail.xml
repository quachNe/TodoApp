<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <!-- ================= HEADER ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_media_previous"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- ================= SEARCH ================= -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                app:tint="#9CA3AF"/>

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="Tìm kiếm task..."
                android:textSize="14sp"
                android:background="@null"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- ================= FILTER ================= -->
    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- TỔNG -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTotal"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#6366F1"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvTotal"
                    android:paddingHorizontal="18dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tổng (0)"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    />
            </com.google.android.material.card.MaterialCardView>


            <!-- HÔM NAY -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardToday"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#F3F4F6"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvToday"
                    android:paddingHorizontal="18dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hôm nay (0)"
                    android:textSize="13sp"
                    android:textColor="#374151"/>
            </com.google.android.material.card.MaterialCardView>


            <!-- ĐÃ HOÀN THÀNH -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCompleted"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#F3F4F6"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvCompleted"
                    android:paddingHorizontal="18dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Đã hoàn thành (0)"
                    android:textSize="13sp"
                    android:textColor="#374151"/>
            </com.google.android.material.card.MaterialCardView>


            <!-- CHƯA HOÀN THÀNH -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPending"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#F3F4F6"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvPending"
                    android:paddingHorizontal="18dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Chưa hoàn thành (0)"
                    android:textSize="13sp"
                    android:textColor="#374151"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- ================= LIST CONTAINER ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/filterScroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ================= SCROLL LIST ================= -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layoutTaskContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>


        <!-- ================= EMPTY STATE ================= -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/ic_empty"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Chưa có công việc nào"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Nhấn + để tạo công việc mới"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- ================= OVERLAY ================= -->
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= Modal ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardModal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        app:cardElevation="14dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ===== HEADER ===== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutModalHeader"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_app"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtModalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm Công Việc"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- ===== BODY ===== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutModalBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutModalHeader">

                <!-- TASK NAME -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTaskName"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="#F8FAFC"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxStrokeColor="#CBD5E1"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconDrawable="@drawable/ic_task"
                    app:startIconTint="#64748B"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtTaskName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tên công việc"
                        android:singleLine="true"
                        android:paddingVertical="16dp"
                        android:textSize="16sp"
                        android:textColor="#0F172A"
                        android:textColorHint="#94A3B8"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- DATE + TIME -->
                <LinearLayout
                    android:id="@+id/layoutDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@id/tilTaskName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- DATE -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPickDate"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#F1F5F9">

                        <TextView
                            android:id="@+id/txtPickDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Chọn ngày"
                            android:textSize="15sp"
                            android:textColor="#334155"/>
                    </com.google.android.material.card.MaterialCardView>


                    <!-- TIME -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPickTime"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#F1F5F9">

                        <TextView
                            android:id="@+id/txtPickTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Chọn giờ"
                            android:textSize="15sp"
                            android:textColor="#334155"/>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- ERROR TASK NAME -->
                <TextView
                    android:id="@+id/txtTaskError"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#EF4444"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutDateTime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- BUTTON GROUP -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@id/txtTaskError"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Hủy"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textColor="#374151"
                        android:backgroundTint="#E5E7EB"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnSaveTask"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Lưu"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#3B82F6"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- ================= FAB ================= -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_margin="24dp"
        app:backgroundTint="#FFFFFF"
        app:tint="#6366F1"
        app:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
