<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="12dp">

    <!-- ACTION (KHÔNG dùng CardView nữa) -->
    <LinearLayout
        android:id="@+id/layoutAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_task_action"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_edit"
            app:tint="#3B82F6"/>

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_delete"
            app:tint="#EF4444"/>

    </LinearLayout>


    <!-- MAIN CARD (DUY NHẤT 1 CARD) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbCompleted"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                app:buttonTint="#6366F1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:useMaterialThemeColors="false" />

            <TextView
                android:id="@+id/txtTaskTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Làm bài tập giải tích"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/cbCompleted"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#6B7280"
                app:layout_constraintStart_toStartOf="@id/txtTaskTitle"
                app:layout_constraintTop_toBottomOf="@id/txtTaskTitle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
