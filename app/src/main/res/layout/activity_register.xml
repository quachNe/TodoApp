<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <!-- LOGIN CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="32dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="28dp"
            android:paddingTop="32dp"
            android:paddingBottom="28dp">

            <!-- LOGO -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/todo_app"
                android:scaleType="fitCenter"
                android:contentDescription="App Logo"/>

            <!-- FULL NAME -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilFullname"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F8FAFC"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="#CBD5E1"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/ic_person_outline"
                app:startIconTint="#64748B">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtFullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Họ và tên"
                    android:imeOptions="actionNext"
                    android:paddingVertical="16dp"
                    android:singleLine="true"
                    android:textColor="#0F172A"
                    android:textColorHint="#94A3B8"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- GENDER -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="#CBD5E1"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#F8FAFC">

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp">

                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nam"
                        android:textSize="15sp"
                        android:textColor="#0F172A"
                        app:buttonTint="@color/radio_gender"/>

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nữ"
                        android:textSize="15sp"
                        android:textColor="#0F172A"
                        app:buttonTint="@color/radio_gender"/>

                    <RadioButton
                        android:id="@+id/rbOther"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Khác"
                        android:textSize="15sp"
                        android:textColor="#0F172A"
                        app:buttonTint="@color/radio_gender"/>

                </RadioGroup>
            </com.google.android.material.card.MaterialCardView>

            <!-- USERNAME -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUsername"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="#F8FAFC"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="#CBD5E1"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/ic_person_outline"
                app:startIconTint="#64748B">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên đăng nhập"
                    android:imeOptions="actionNext"
                    android:paddingVertical="16dp"
                    android:singleLine="true"
                    android:textColor="#0F172A"
                    android:textColorHint="#94A3B8"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PASSWORD -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="#F8FAFC"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeColor="#CBD5E1"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#64748B"
                app:startIconDrawable="@drawable/ic_lock_outline"
                app:startIconTint="#64748B">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingVertical="16dp"
                    android:textColor="#0F172A"
                    android:textColorHint="#94A3B8"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ERROR MESSAGE -->
            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text=""
                android:textColor="#DC2626"
                android:textSize="14sp"
                android:visibility="gone"/>

            <!-- SPACE -->
            <View
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <!-- Register BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/btn_gradient_ocean"
                android:text="Đăng ký"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="24dp"
                app:backgroundTint="@null"
                app:elevation="4dp"/>

            <!-- REGISTER -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn đã có tài khoản? "
                    android:textSize="14sp"
                    android:textColor="#64748B"/>

                <TextView
                    android:id="@+id/tvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0EA5E9"
                    android:padding="6dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>